<div id="map-page">
  <div id="map"></div>
  <%= image_tag current_user.image.variant(:icon), class: "icon" %> 
  <div id="loading-screen">
    <div class="spinner"></div>
  </div>

  <div id="match-info" style="display: none;">
    <div class="match-info__container">
      <div class="main-info">
        <h2>
          <span id="name"></span>
          <span id="age"></span>
        </h2> 
        <p id="distance"></p>
      </div>
      <p id="comment"></p>
      <button id="map__closeButton">✕</button>
      <button id="agreement" class="btn">今すぐ会う</button>
      <div id="loading-screen2" style="display: none;">
        <div class="spinner"></div>
      </div>
    </div>
  </div>

  <div id="appointment" style="display: none">
    <div class="appointment__container">
      <h3>Matched!</h3>
      <h1 id="station"></h1>
      <p id="distance-to-station"></p>
    </div>
  </div>

  <div id="sound" class="sound"></div>
  <div id="current-location"></div>
  <%= audio_tag 'muber_notification_1.m4a', loop: "true" %>
</div>