<div id="map-page">
  <div>
    <%= link_to "オフライン", '#', id: "disconnect-link" %>
  </div>
  <div id="map"></div>
  <%= image_tag current_user.image.variant(:display), class: "icon" %> 
  <img id="partner-image" alt="nothing" style="display: none;" class="icon"> 

  <div id="match-info" style="display: none;">
    <div class="match-info__container">
      <div class="main-info">
        <h2>
          <span id="name"></span>
          <span id="age"></span>
        </h2> 
        <p id="distance"></p>
      </div>
      <p id="comment"></p>
      <button id="map__closeButton">✕</button>
      <button id="agreement" class="btn">今すぐ会う</button>
    </div>
  </div>
  

  <div id="appointment" style="display: none">
    <h2 id="station"></h2>
    <h2 id="distance-to-station"></h2>
    <h2 id="meeting-time"></h2>
    <p id="partner-info"></p>
    <button id="unmatch">マッチ解除</button>
  </div>
</div>