<% provide(:title, "ログイン") %>
<div>
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div class="general_field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
    </div>

    <div class="general_field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
    </div>
    
    <div class="general_field">
    <%= f.submit "ログイン", class: "btn" %>
    </div>
  <% end %>

  <p>パスワードを忘れた: <%= link_to "再登録", new_password_reset_path %></p>
  <p>アカウントを持っていない: <%= link_to "新規登録", signup_path %></p>

</div>
