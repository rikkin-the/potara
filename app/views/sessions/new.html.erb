<h1>ログイン</h1>

<div>
  <%= form_with(url: login_path, scope: :session) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "ログイン" %>
  <% end %>

  <p>新規登録がまだの方はこちら</p>
  <%= link_to "新規登録", signup_path %>
</div>
