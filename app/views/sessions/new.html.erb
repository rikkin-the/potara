<% provide(:title, "ログイン") %>
<div>
  <%= form_with(url: login_path, scope: :session) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= link_to "(パスワードを忘れた)", new_password_reset_path %>
    <%= f.password_field :password %>
    
    <%= f.submit "ログイン" %>
    <p>※ログイン情報はクッキーに保存されます</p>
  <% end %>

  <p>新規登録がまだの方はこちら</p>
  <%= link_to "新規登録", signup_path %>
</div>
