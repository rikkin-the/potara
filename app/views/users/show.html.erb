<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages' %>
<div class="general_field">
  <%= f.label :name, "ニックネーム" %>
  <%= f.text_field :name %>
</div>

<div class="general_field">
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>
</div>

<div class="general_field">
  <%= f.submit "更新", class: "btn" %>
</div>
<% end %>

<%= link_to "アカウントを削除する", @user, data: { "turbo-method": :delete,
                                                   turbo_confirm: "本当に削除しますか？" } %>